<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".showInfo.TentativeFragment"
    android:background="#1C1B1B">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:background="#535353"
            android:id="@+id/iv_episodesPhoto"
            android:layout_width="130dp"
            android:layout_height="250dp"
            tools:src="@tools:sample/avatars"
            android:layout_margin="10dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_episode_name"
        android:text="Episode Name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="295dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_episode_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="325dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Episode number"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_episode_season"
        android:text="Season"
        android:layout_marginStart="10dp"
        android:layout_marginTop="355dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_runtime"
        android:text="Runtime in hours"
        android:layout_marginStart="10dp"
        android:layout_marginTop="380dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/white"/>


</RelativeLayout>